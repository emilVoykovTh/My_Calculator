<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textfield_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result_tv"
        android:layout_margin="20dp"
        android:layout_marginBottom="-85dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="64dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_above="@id/buttons_layout"
        android:layout_margin="20dp">
    </TextView>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingVertical="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_6"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#434343"
                android:layout_margin="2dp"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_7"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#434343"
                android:layout_margin="2dp"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_8"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#434343"
                android:layout_margin="2dp"
                android:text="8"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_9"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#434343"
                android:layout_margin="2dp"
                android:text="9"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_0"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_3"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_4"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#3A3A3A"
                android:textSize="45dp"></Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_plus"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="+"
                android:textAlignment="center"
                android:textColor="#2FF000"
                android:background="#7E7E7E"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_minus"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="#2FF000"
                android:background="#7E7E7E"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_divide"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="/"
                android:textAlignment="center"
                android:textColor="#2FF000"
                android:background="#7E7E7E"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_multiply"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="*"
                android:textAlignment="center"
                android:textColor="#2FF000"
                android:background="#7E7E7E"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_equals"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="="
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#2FF000"
                android:textSize="45dp"></Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_ca"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="CA"
                android:textAlignment="center"
                android:textColor="#EB3636"
                android:background="#424242"
                android:padding="5dp"
                android:textSize="45dp"></Button>

            <Button
                android:id="@+id/button_rectangle"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="Rectangle"
                android:textAlignment="center"
                android:textColor="#EB3636"
                android:background="#424242"
                android:padding="5dp"
                android:textSize="30dp"></Button>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
