<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rectangle_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_dynamic_neutral70"
    android:padding="24dp">

    <EditText
        android:id="@+id/width_operand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter width"
        android:inputType="number" />

    <EditText
        android:id="@+id/length_operand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter height"
        android:inputType="number" />

    <Button
        android:id="@+id/draw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EB3636"
        android:background="#424242"
        android:text="Draw Rectangle" />

    <!-- Drawing area -->
    <FrameLayout
        android:id="@+id/draw_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE" />

    <!-- ðŸ”™ Return to Calculator Button -->
    <Button
        android:id="@+id/back_to_calculator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Calculator"
        android:layout_gravity="center_horizontal"
        android:textColor="#EB3636"
        android:background="#424242"
        android:layout_marginTop="16dp"/>
</LinearLayout>
